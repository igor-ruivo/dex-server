{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["es2021"]
  },
  "include": ["*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
} 